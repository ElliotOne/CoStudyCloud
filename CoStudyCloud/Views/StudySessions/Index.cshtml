@model CoStudyCloud.Core.ViewModels.StudySessionIndexViewModel

@{
    ViewData["Title"] = "Sessions";
}

<section class="table-section">
    <div class="row justify-content-center">
        <div class="col-12 mb-5">
            <div class="section-title text-center">
                <h2>@ViewData["Title"]</h2>
            </div>
            <div class="section-buttons">
                <a asp-action="Create" class="btn btn-success">
                    <span class="fa fa-plus"></span>
                    Create
                </a>
            </div>
        </div>
        <div class="col-12">

            @if (Model.StudySessionWithGroupViewModels != null)
            {
                <table id="jq-table" class="table table-striped table-bordered dt-responsive">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(x => x.StudySessionWithGroupViewModels!.Single().Summary)
                            </th>
                            <th>
                                @Html.DisplayNameFor(x => x.StudySessionWithGroupViewModels!.Single().StudyGroupTitle)
                            </th>
                            <th>
                                @Html.DisplayNameFor(x => x.StudySessionWithGroupViewModels!.Single().StartDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(x => x.StudySessionWithGroupViewModels!.Single().EndDate)
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var group in Model.StudySessionWithGroupViewModels)
                        {
                            <tr role="row" class="odd">
                                <td>@group.Summary</td>
                                <td>@group.StudyGroupTitle</td>
                                <td>@group.StartDate</td>
                                <td>@group.EndDate</td>
                            </tr>
                        }

                    </tbody>
                </table>
            }

        </div>
    </div>
</section>
